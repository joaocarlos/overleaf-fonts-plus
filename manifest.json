{
    "manifest_version": 3,
    "name": "Overleaf Editor Fonts+",
    "description": "Extend Overleaf editor font selection with extra developer fonts.",
    "version": "0.1.1",
    "permissions": ["storage"],
    "host_permissions": ["https://www.overleaf.com/*"],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": ["https://www.overleaf.com/*"],
            "js": ["src/content/overleaf-fonts.js"],
            "run_at": "document_idle"
        }
    ],
    "options_page": "src/options/options.html",
    "action": {
        "default_title": "Overleaf Fonts+",
        "default_popup": "src/popup/popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png"
        }
    }
}
